{% extends 'base.html.twig' %}

{% block title %}Planning matériel (Gantt){% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
      <style>
        /* === Container global === */
        .planning-container {
            background: linear-gradient(145deg, #ffffff, #f6f8fb);
            border-radius: 16px;
            padding: 25px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.08);
            margin-top: 30px;
            transition: all 0.3s ease-in-out;
        }
        .planning-container:hover {
            box-shadow: 0 12px 28px rgba(0,0,0,0.12);
        }

        /* === Titre === */
        .planning-container h3 {
            font-weight: 700;
            font-size: 1.6rem;
            color: #2c3e50;
            margin-bottom: 25px;
            letter-spacing: 0.5px;
        }

        /* === Barre de recherche === */
        #searchInput {
            border-radius: 12px;
            border: 2px solid #dee2e6;
            padding: 12px 16px;
            font-size: 15px;
            transition: all 0.3s ease;
        }
        #searchInput:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 12px rgba(13, 110, 253, 0.3);
        }

        /* === Zone Gantt === */
        #gantt { 
            margin-top: 1.5rem;
            background: #fff;
            border-radius: 12px;
            padding: 20px;
            box-shadow: inset 0 2px 8px rgba(0,0,0,0.05);
        }

        /* === Barres de Gantt === */
        .gantt .bar rect {
            rx: 8;
            ry: 8;
            fill: #95a5a6;
            transition: all 0.25s ease;
        }
        .gantt .bar rect:hover {
            fill: #0d6efd;
            opacity: 0.9;
            cursor: pointer;
        }
        .gantt .bar.overlap rect { 
            stroke: #e74c3c; 
            stroke-width: 3; 
        }

        /* === Lignes de la grille === */
        .gantt .grid .row:nth-child(even) {
            fill: #f9fafc;
        }
        .gantt .grid .row:nth-child(odd) {
            fill: #ffffff;
        }

        /* === Popup personnalisé === */
        .gantt .details-container {
            background: #ffffff;
            padding: 12px 15px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.12);
            font-size: 14px;
            color: #2c3e50;
            font-weight: 500;
        }
        .gantt .details-container b {
            color: #0d6efd;
            font-size: 15px;
        }
        .gantt .details-container i {
            color: #6c757d;
            font-style: normal;
        }

        /* === Bouton Today === */
        .gantt .today-highlight {
            background-color: rgba(13, 110, 253, 0.08) !important;
        }
    </style>

<div class="container">
    <div class="planning-container">
        <h3>Planning matériel</h3>
        
        <!-- Champ recherche -->
        <div class="mb-3">
            <input type="text" id="searchInput" class="form-control" placeholder=" Rechercher un matériel ou un chantier...">
        </div>

        <div id="gantt"></div>
    </div>
</div>

<script>
    const tasks = {{ tasks|raw }};
    let gantt;

    // === Fonction d'affichage du Gantt ===
    function renderGantt(data) {
        document.getElementById("gantt").innerHTML = "";
        gantt = new Gantt("#gantt", data, {
            view_mode: 'Week',
            date_format: 'YYYY-MM-DD',
            custom_popup_html: task => `
                <div class="details-container">
                    <b>${task.name}</b><br>
                    Du <i>${task.start}</i> au <i>${task.end}</i>
                </div>`
        });
    }

    renderGantt(tasks);

    // Recherche en direct
    document.getElementById("searchInput").addEventListener("input", function() {
        const query = this.value.toLowerCase();
        if (query.trim() === "") {
            renderGantt(tasks);
        } else {
            const filtered = tasks.filter(t => t.name.toLowerCase().includes(query));
            renderGantt(filtered);
        }
    });
</script>
{% endblock %}
