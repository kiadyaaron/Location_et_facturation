{% extends 'base.html.twig' %}

{% block title %}Historique des factures{% endblock %}

{% block body %}
<div class="container mt-4">
<h1>Historique des factures</h1>

<table class="table table-bordered table-striped">
        <thead class="table-dark">
        <tr>
            <th>Numéro</th>
            <th>Date</th>
            <th>Mois facturé</th>
            <th>Chantier</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.numero }}</td>
                <td>{{ facture.dateCreation|date('d/m/Y') }}</td>
                <td>{{ facture.moisFacture|date('F Y')|capitalize }}</td>
                <td>{{ facture.chantier.nom }}</td>
                <td>
                    <a href="{{ path('app_facture_view_pdf', {id: facture.id}) }}" class="btn btn-primary btn-sm" target="_blank">Voir PDF</a>
                    <form method="post" action="{{ path('app_facture_delete', {'id': facture.id}) }}"
                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette facture ?');"
                          style="display:inline-block">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ facture.id) }}">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger btn-sm">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune facture générée.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}
