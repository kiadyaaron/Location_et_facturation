{% extends 'base.html.twig' %}

{% block title %}Affectation {% endblock %}

{% block body %}

<div style="margin-left: 14px; margin-right: 14px">
    <h2 style="margin-top: 30px;">Liste des affectations</h2>
</div>
<div style="margin-top: 30px; margin-left: 14px; margin-right: 14px;">
    <div class="d-flex justify-content-between align-items-center mb-3">
    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
        <a href="{{ path('app_affectation_new') }}" class="btn btn-success">+ Nouvelle Affectation</a>
    {% endif %}
        <a href="{{ path('app_facture_index') }}" class="btn custom-orange">Facturation</a>

        <form method="GET" class="d-flex p-2 border rounded" style="max-width: 400px;">
    <input type="text" name="search" class="form-control me-2 border-0"
           placeholder="Rechercher une affectation..."
           value="{{ app.request.get('search') }}">
    <button class="btn btn-primary" type="submit">Rechercher</button>
</form>

    </div>

    <table class="table table-bordered table-striped table-auto-width">
        <thead  class="table-dark">
            <tr style="height: 60px;">
                <th>Matériel</th>
                <th>Duree d'utilisation</th>
                <th>Date début</th>
                <th>Date fin</th>
                <th>Chantier</th>
                <th>Adresse du chantier</th>
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
                <th>Options</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for affectation in affectations %}
            <tr>
                <td>{{ affectation.materiel.libelle }}</td>
                <td>{{ affectation.dureeUtilisationTotale }} jours</td>
                <td>{{ affectation.dateDebut|date('d/m/Y') }}</td>
                <td>{{ affectation.dateFin|date('d/m/Y') }}</td>
                <td>{{ affectation.chantier.nom }}</td>
                <td>{{ affectation.chantier.adresse }}</td>
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
                <td>
                    
                    <a href="{{ path('app_affectation_edit', {'id': affectation.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    <form method="post" action="{{ path('app_affectation_delete', {'id': affectation.id}) }}"
                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette affectation ?');"
                          style="display:inline-block">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ affectation.id) }}">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger btn-sm">Supprimer</button>
                    </form>
                    
                </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune affectation trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    
{% endblock %}
